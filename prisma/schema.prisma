generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id           Int        @id @default(autoincrement()) @db.UnsignedInt
  title        String
  pages        Int        @db.UnsignedInt
  isbn         String?
  authors      Author[]
  publisherId  Int        @db.UnsignedInt
  publisher    Publisher  @relation(fields: [publisherId], references: [id])
  cover        Json?      @default("{}")
}

model Author {
  id         Int        @id @default(autoincrement()) @db.UnsignedInt
  name       String
  books      Book[]
}

model Publisher {
  id         Int        @id @default(autoincrement()) @db.UnsignedInt
  name       String
  books      Book[]
}

model User {
  id        Int         @id @default(autoincrement()) @db.UnsignedInt
  name      String
  email     String      @unique
  password  String
}
